<% provide(:title, 'Add Turtle') %>
<h1>Add Turtle</h1>


<div class="row">
<div class="col-md-6 col-md-offset-3">
  <h4>Enter information about your turtle below</h4>
  <%= form_for(@turtle) do |f| %>

      <%= render 'shared/error_messages', obj: @turtle %>

      <div class="form-group">
        <%= f.label(:name, "Name") %>
        <%= f.text_field(:name, class:'form-control') %>
      </div>

      <div class="form-group">
        <%= f.label(:bio, "Bio") %>
        <%= f.text_field(:bio, class:'form-control') %>
      </div>

      <div class="form-group">
        <%= f.label(:image_path, "Upload photo") %>
        <%= f.file_field :image_path %>
      </div>

      <%= f.text_field(:user_id, value: @current_user.id, type: 'hidden') %>

      <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
</div>
</div>