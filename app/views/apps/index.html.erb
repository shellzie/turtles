
<div class="row">
  <div class="col-md-6">
    <h3>My Turtles</h3>
    <button><a href="turtles/new">Add Turtle</a></button>

  </div>

  <div class="col-md-6">
    <h3>Network Settings</h3>
    <button>Connect turtle to network</button>
  </div>
</div>

<div class="row">

  <div class="col-md-12">
    <h3>App Store</h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>App Name</th>
          <th>Description</th>
        </tr>
        </thead>
        <tbody>
          <% @apps.each do |app| %>
              <tr class="clickable-row" data-href="/apps/<%= app.id %>">
                <td><%= app.name %></td>
                <td><%= app.description %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
